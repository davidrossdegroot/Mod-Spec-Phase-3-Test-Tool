<%= form_for @testcase, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %>Test Case</legend>
<div class="row-fluid">
<div class="span3"></div>
<div class="span6">
    <div class="control-group">
      <%= f.label :purpose, :class => 'control-label' %>
      <div class="controls docs-input-sizes">
        <%= f.text_field :purpose, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :steps, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :steps, :class => 'text_area' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :script, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :script, :class => 'text_area' %>
        <p class="help-block">Each script will contain a variable for a domain name, an email address, or an email formatted as a domain name.
 If the script requires a DNS formatted email address, please use "~dnsemail". 
If the script requires just the domain name, use "~domain". If the script requires the 
full email address, use "~email". Example script for a domain name: "dig ~domain"</p>
        </div>
    </div>
  <div class="control-group">
      <%= f.label :expected_result, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :expected_result, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :TcId, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :TcId, :class => 'text_field' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', testcases_path, :class => 'btn' %>
    </div>
    </div>
<div class="span3"></div>
</div>
  </fieldset>
<% end %>
